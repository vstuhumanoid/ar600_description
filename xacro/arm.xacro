<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!--
		Solid Works conversion
		x <- -x
		y <-  z
		z <-  y
	-->

	<xacro:macro name="arm" params="parent side"> 
		<xacro:left_right side="${side}"/>

		<link name="shoulder_fork_${side}">
	 		<xacro:meshes file="shoulder_fork_${side}"/>
	 	</link>

	 	<joint name="shoulder_f_joint_${side}"
	 		   type="revolute">
	 		<parent link="${parent}"/>
	 		<child link="shoulder_fork_${side}"/>
	 		<!-- z unknown -->
	 		<origin xyz="${1 * x_sign} 0.0276 0" rpy="0 0 0"/>
	 		<axis xyz="0 0 1"/>
	 		<limit lower="${-20*d2r}" upper="${20*d2r}" effort="10" velocity="10"/>
	 	</joint>

	</xacro:macro>
</robot>