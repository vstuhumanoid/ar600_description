<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!--
		Solid Works conversion
		x <- -x
		y <-  z
		z <-  y
	-->

	<xacro:macro name="head_and_neck" params="parent"> 

		<link name="neck">
	 		<xacro:meshes file="neck"/>
	 		<inertial>
	 			<origin xyz="-0.00 0.00 0.02" rpy="0 0 0"/>
      	<mass value="0.657"/>
      	<inertia ixx="0.001201" ixy="0.000000" ixz="-0.000000"
      				                  iyy="0.001020" iyz="0.000300"
      				                                 izz="0.000718"/>
    		</inertial>
	 	</link>

	 	<link name="neck_fork">
	 		<xacro:meshes file="neck_fork"/>
	 		<inertial>
	 			<!-- z unknown -->
	 			<origin xyz="0 -0.01 -0.02" rpy="0 0 0"/>
      	<mass value="0.016"/>
      	<inertia ixx="0.000013" ixy="-0.000000" ixz="0.000000"
      				                  iyy="0.000006"  iyz="0.000000"
      				                                  izz="0.000012"/>
    		</inertial>
	 	</link>

	 	<link name="neck_cross">
	 		<xacro:meshes file="neck_cross"/>
	 		<inertial>
	 			<origin xyz="0 0 0" rpy="0 0 0"/>
      	<mass value="0.140"/>
      	<inertia ixx="0.000026" ixy="0.000000" ixz="0.000000"
      				                  iyy="0.000256" iyz="0.000000"
      				                                 izz="0.000266"/>
    		</inertial>
	 	</link>

	 	<link name="head">
	 		<xacro:meshes file="head"/>
	 		<inertial>
	 			<origin xyz="0.00 0.00 0.06" rpy="0 0 0"/>
      		<mass value="5.515"/>
      		<inertia ixx="0.033638" ixy="0.000000" ixz="0.000001"
      				                    iyy="0.031846"  iyz="0.002895"
      				                                    izz="0.138931"/>
    	</inertial>
	 	</link>

	 	<!-- neck x (forward) -->
	 	<joint name="neck_f_joint"
	 		   type="revolute">
	 		<parent link="${parent}"/>
	 		<child link="neck"/>
	 		
	 		<!-- unknown -->
	 		<origin xyz="0 0.041 0.016" rpy="0 0 0"/>
	 		<axis xyz="-1 0 0"/>
	 		<limit lower="${0*d2r}" upper="${60*d2r}" effort="10" velocity="10"/>
	 	</joint>

	 	<!-- head z (rotate) -->
		<joint name="head_r_joint"
			   type="revolute">
			<parent link="neck"/>
	 		<child link="neck_fork"/>

	 		<!-- unknown -->
	 		<origin xyz="0 -0.034 0.13" rpy="0 0 0"/>
	 		<axis xyz="0 0 1"/>
	 		<limit lower="${-90*d2r}" upper="${90*d2r}" effort="10" velocity="10"/>
		</joint>

		<!-- head y (side) -->
		<joint name="head_s_joint"
			   type="revolute">
			<parent link="neck_fork"/>
	 		<child link="neck_cross"/>
	 		<origin xyz="0 0 0" rpy="0 0 0"/>
	 		<axis xyz="0 1 0"/>
	 		<limit lower="${-15*d2r}" upper="${15*d2r}" effort="10" velocity="10"/>
		</joint>

		<!-- head x (forward) -->
		<joint name="head_f_joint"
			   type="revolute">
			<parent link="neck_cross"/>
	 		<child link="head"/>
	 		<!-- z unknown -->
	 		<origin xyz="0 0 0" rpy="0 0 0"/>
	 		<axis xyz="1 0 0"/>
	 		<limit lower="${-20*d2r}" upper="${30*d2r}" effort="10" velocity="10"/>
		</joint>


		<xacro:transmission_block joint_name="neck_f_joint"/>
		<xacro:transmission_block joint_name="head_r_joint"/>
		<xacro:transmission_block joint_name="head_s_joint"/>
		<xacro:transmission_block joint_name="head_f_joint"/>

	 	

	</xacro:macro>
</robot>